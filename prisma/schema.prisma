// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}


datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL") // Uses the Pooler (6543) for the App
  directUrl = env("POSTGRES_URL_NON_POOLING") // Uses Direct (5432) for Migrations
}

// Global System Settings (Singleton logic enforced by app)
model SystemSettings {
  id           String  @id @default(cuid())
  geminiApiKey String?
}

model Event {
  id              String   @id @default(cuid())
  name            String   @default("My Event")
  startDate       DateTime @default(now())
  endDate         DateTime @default(now())
  
  // Lists
  tags            String[] @default([])
  meetingTypes    String[] @default([])
  attendeeTypes   String[] @default([])
  
  timezone        String?
  
  // New Fields
  url             String?
  address         String?
  requesterEmail  String?
  region          String?  // NA, SA, EU_UK, MEA, APAC, JAPAN
  budget          Float?
  targetCustomers String?
  expectedRoi     String?
  status          String   @default("PIPELINE") // PIPELINE, COMMITTED, CANCELED, OCCURRED

  // Relations
  attendees       Attendee[]
  rooms           Room[]
  meetings        Meeting[]
}

model Attendee {
  id                 String    @id @default(cuid())
  name               String
  title              String
  email              String    @unique
  bio                String?
  company            String
  companyDescription String?
  linkedin           String?
  imageUrl           String?
  isExternal         Boolean   @default(false)
  type               String?
  eventId            String? // Optional for migration, will make required later or handle in code
  event              Event?    @relation(fields: [eventId], references: [id], onDelete: Cascade)
  meetings           Meeting[] @relation("AttendeeMeetings")
  
  @@unique([email, eventId])
}

model Room {
  id       String    @id @default(cuid())
  name     String
  capacity Int
  eventId  String?
  event    Event?    @relation(fields: [eventId], references: [id], onDelete: Cascade)
  meetings Meeting[]
}

enum MeetingStatus {
  PIPELINE
  CONFIRMED
  OCCURRED
  CANCELED
}

model Meeting {
  id          String        @id @default(cuid())
  title       String
  purpose     String?
  date        String?
  startTime   String?
  endTime     String?
  roomId      String?
  room        Room?         @relation(fields: [roomId], references: [id])
  attendees   Attendee[]    @relation("AttendeeMeetings")
  sequence    Int           @default(0)
  status      MeetingStatus @default(PIPELINE)
  tags        String[]      @default([])
  createdBy   String?
  requesterEmail String?
  meetingType String?
  location    String?
  otherDetails String?
  isApproved  Boolean       @default(false)
  calendarInviteSent Boolean @default(false)
  
  eventId     String?
  event       Event?        @relation(fields: [eventId], references: [id], onDelete: Cascade)
}
