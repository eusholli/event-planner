// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model EventSettings {
  id        String   @id @default(cuid())
  name      String   @default("My Event")
  startDate DateTime @default(now())
  endDate   DateTime @default(now())
  geminiApiKey String?
  tags      String[] @default([])
  meetingTypes String[] @default([])
  attendeeTypes String[] @default([])
  timezone      String?
}

model Attendee {
  id                 String    @id @default(cuid())
  name               String
  title              String
  email              String    @unique
  bio                String?
  company            String
  companyDescription String?
  linkedin           String?
  imageUrl           String?
  isExternal         Boolean   @default(false)
  type               String?
  meetings           Meeting[] @relation("AttendeeMeetings")
}

model Room {
  id       String    @id @default(cuid())
  name     String
  capacity Int
  meetings Meeting[]
}

enum MeetingStatus {
  STARTED
  COMPLETED
  CANCELED
}

model Meeting {
  id          String        @id @default(cuid())
  title       String
  purpose     String?
  date        String?
  startTime   String?
  endTime     String?
  roomId      String?
  room        Room?         @relation(fields: [roomId], references: [id])
  attendees   Attendee[]    @relation("AttendeeMeetings")
  sequence    Int           @default(0)
  status      MeetingStatus @default(STARTED)
  tags        String[]      @default([])
  createdBy   String?
  requesterEmail String?
  meetingType String?
  location    String?
  otherDetails String?
  isApproved  Boolean       @default(false)
  calendarInviteSent Boolean @default(false)
}
